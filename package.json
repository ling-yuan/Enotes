{
  "name": "enotes",
  "icon": "resources/icon.png",
  "publisher": "baishi",
  "displayName": "Enotes",
  "description": "You can view your notes in any project.",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/main.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "enotes-explorer",
          "title": "Enotes",
          "icon": "resources/note.svg"
        }
      ]
    },
    "views": {
      "enotes-explorer": [
        {
          "id": "enotesView",
          "name": "Notes List"
        }
      ]
    },
    "commands": [
      {
        "command": "enotes.addNote",
        "title": "Add Note",
        "icon": "$(add)"
      },
      {
        "command": "enotes.searchNotes",
        "title": "搜索笔记",
        "icon": "$(search)"
      },
      {
        "command": "enotes.deleteNote",
        "title": "Delete Note",
        "icon": "$(trash)"
      },
      {
        "command": "enotes.refreshNotes",
        "title": "Refresh Notes",
        "icon": "$(refresh)"
      },
      {
        "command": "enotes.renameNote",
        "title": "Rename Note",
        "icon": "$(edit)"
      },
      {
        "command": "enotes.editTags",
        "title": "修改标签",
        "icon": "$(tag)"
      },
      {
        "command": "enotes.togglePreview",
        "title": "切换预览/编辑模式",
        "icon": "$(preview)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "enotes.addNote",
          "when": "view == enotesView",
          "group": "navigation@1"
        },
        {
          "command": "enotes.searchNotes",
          "when": "view == enotesView",
          "group": "navigation@2"
        },
        {
          "command": "enotes.refreshNotes",
          "when": "view == enotesView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "enotes.renameNote",
          "when": "view == enotesView && viewItem != empty",
          "group": "inline@1"
        },
        {
          "command": "enotes.editTags",
          "when": "view == enotesView && viewItem != empty",
          "group": "inline@2"
        },
        {
          "command": "enotes.deleteNote",
          "when": "view == enotesView && viewItem != empty",
          "group": "inline@3"
        }
      ],
      "editor/title": [
        {
          "command": "enotes.togglePreview",
          "when": "activeWebviewPanelId == enotesEditor",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Enotes",
      "properties": {
        "enotes.notesPath": {
          "type": "string",
          "default": "",
          "description": "笔记文件保存路径。若未设置则保存在工作区.vscode/notes目录下"
        },
        "enotes.openNoteRightNow": {
          "type": "boolean",
          "default": true,
          "description": "是否在创建笔记时直接打开"
        },
        "enotes.defaultEditMode": {
          "type": "boolean",
          "default": true,
          "description": "是否在打开笔记时默认启用编辑模式（否则为预览模式）"
        }
      }
    },
    "iconThemes": [
      {
        "id": "enotes-icons",
        "label": "ENotes Icons",
        "path": "./icons/enotes-icon-theme.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/ling-yuan/Enotes"
  },
  "bugs": {
    "url": "https://github.com/ling-yuan/Enotes/issues"
  },
  "homepage": "https://github.com/ling-yuan/Enotes/blob/main/README.md",
  "dependencies": {
    "marked": "^15.0.7"
  }
}